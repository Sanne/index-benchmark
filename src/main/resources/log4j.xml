<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd" >
<log4j:configuration>
    <appender
        name="stdout"
        class="org.apache.log4j.ConsoleAppender">
        <layout
            class="org.apache.log4j.SimpleLayout"></layout>
    </appender>
    <root>
        <priority
            value="INFO" />
        <appender-ref
            ref="stdout" />
    </root>

    <category
        name="org.hibernate"
        level="TRACE">
        <appender-ref
            ref="App1Log" />
    </category>
    <category
        name="org.hibernate.search"
        level="INFO">
        <appender-ref
            ref="App1Log" />
    </category>
</log4j:configuration>
